<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <esri:MapView x:Name="mapView" Map="{Binding}"
                      GeoViewTapped="mapView_GeoViewTapped"/> 
        
        <esri:Compass Heading="{Binding MapRotation, ElementName=mapView}" Margin="20" />

        <Button HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20" Content="Publish to Portal" Click="Publish_Click"/>


    </Grid>
</Window>
